{
  "manifest_version": 3,
  "name": "BonusVarsler (for Trumf, DNB, re:member++)",
  "version": "6.0.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "no",
  "homepage_url": "https://github.com/kristofferR/BonusVarsler",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://wlp.tcb-cdn.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "BonusVarsler Lite"
  },
  "web_accessible_resources": [
    {
      "resources": ["_locales/*/*.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "trumf-bonusvarsler-lite@kristofferR",
      "strict_min_version": "142.0",
      "granted_host_permissions": true,
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
